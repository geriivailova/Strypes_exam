#include <stdio.h>
#include <string.h>
#include <stdlib.h>
void Count()
{   int upper = 0, lower = 0, number = 0, special = 0;
    for (int i = 0; i < str.length(); i++)
    {
        if (str[i] >= 'A' && str[i] <= 'Z')
            upper++;
        else if (str[i] >= 'a' && str[i] <= 'z')
            lower++;
            
    printf("%d/n", upper);
    }
}

int main() {
    
    int n;
    int m;
    int k;
    scanf("%d", &n);
    scanf("%d", &m);
    scanf("%d", &k);
    int sum = n + m + k;
    char string[n];
    char string1[m];
    char string2[k];

    printf("%d\n", sum);
    //printf("Created an array of size %lu\n", sizeof(elements));
    for (int i=0;i< n;i++)
        string[i]=rand()%26+97;
    for (int l=0;l<m;l++)
        string1[l]=rand()%26+65;
    //for (int o=0;o<k;o++)
        //string2[o]=rand();
        
    printf("%s%s%s ",string,string1,string2);
    Count(string);
    
    


    return 0;
}
